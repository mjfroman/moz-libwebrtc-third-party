config("opencv_warnings") {
  cflags = [ "-Wno-unused-function" ]
}

source_set("emd") {
  sources = [
    "src/emd.cpp",
    "src/emd_wrapper.h",
  ]

  defines = [ "CHROMIUM_OPENCV" ]

  configs -= [ "//build/config/compiler:chromium_code" ]
  configs += [
    "//build/config/compiler:no_chromium_code",
    ":opencv_warnings",
  ]

  deps = [
    "//base",
  ]
}
