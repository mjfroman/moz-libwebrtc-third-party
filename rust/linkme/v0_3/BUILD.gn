import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "linkme"
  epoch = "0.3"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//third_party/rust/linkme/v0_3/crate/src/distributed_slice.rs",
    "//third_party/rust/linkme/v0_3/crate/src/lib.rs",
    "//third_party/rust/linkme/v0_3/crate/src/private.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/compiletest.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/custom_linkme_path.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/distributed_slice.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/example.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/fn_element.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/module/mod.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/module_2015.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/module_2021.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/ui/bad_crate_path.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/ui/generic_fn.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/ui/mismatched_types.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/ui/mutable.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/ui/unsupported_item.rs",
    "//third_party/rust/linkme/v0_3/crate/tests/ui/zerosized.rs",
  ]
  inputs = [ "//third_party/rust/linkme/v0_3/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2021"
  cargo_pkg_version = "0.3.11"
  cargo_pkg_authors = "David Tolnay <dtolnay@gmail.com>"
  cargo_pkg_name = "linkme"
  cargo_pkg_description = "Safe cross-platform linker shenanigans"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [ "//third_party/rust/linkme_impl/v0_3:lib" ]
  features = [ "used_linker" ]
}
group("test_support") {
  public_deps = [ ":lib" ]
  testonly = true
}
