import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "clang_sys"
  epoch = "1"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  sources = [ "crate/src/lib.rs" ]
  edition = "2015"
  cargo_pkg_version = "1.3.0"
  cargo_pkg_authors = "Kyle Mayes <kyle@mayeses.com>"
  deps = [
    "//third_party/rust/glob/v0_3:lib",
    "//third_party/rust/libc/v0_2:lib",
    "//third_party/rust/libloading/v0_7:lib",
  ]
  build_deps = [ "//third_party/rust/glob/v0_3:buildrs_support" ]
  features = [
    "clang_3_5",
    "clang_3_6",
    "clang_3_7",
    "clang_3_8",
    "clang_3_9",
    "clang_4_0",
    "clang_5_0",
    "clang_6_0",
    "libloading",
    "static",
  ]
  build_root = "crate/build.rs"
  build_sources = [ "crate/build.rs" ]

  # TODO(crbug.com/1304251): The following line arranges for dependent targets
  # to link against clang's static libraries.
  deps += [ "//build/rust/clanglibs" ]

  # TODO(crbug.com/1304254): The following 'rustenv' is set by the dep above
  # but is unavailable to the build script in cargo_crate.gni so we enforce it
  # here.
  rustenv = [ "LIBCLANG_STATIC_PATH=" +
              rebase_path("//third_party/llvm-build/Release+Asserts/lib") ]
}
